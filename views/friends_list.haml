!!!5
%html
    %head
        %title Friends
        %script{:type => "text/javascript",:src => "js/jquery.min.js"}
        %script{:type => "text/javascript",:src => "js/to_client.js"}
        %script{:type => "text/javascript",:src => "bootstrap/bootstrap.min.js"}
        %link{:href => "bootstrap/bootstrap.min.css", :rel => "stylesheet"}
    %body
        %nav{:class => "navbar navbar-inverse navbar-fixed-top", :role => "navigation"}            
            .container
                .navbar-header
                    %a{:class => "navbar-brand", :href => "/hello"}
                        %span{:class =>"glyphicon glyphicon-chevron-left"}            
                .navbar-brand    
                    %span Your Friends 
        %br/
        %br/ 
        %br/
        .container
            %h1{:id => "username"} Hi, #{locals[:user_name]} !
            -#%p{:id => "session_name"} #{session[:tmp].inspect}
            %p 
                %h3 Please choose  a friend:
            %table{:class => "table table-hover"}
                - JSON.parse(friends_list).each do |f|            
                    %tr{:id => "#{f.to_s}"}
                        %td=f.to_s
                - end unless @do_nothing
            %form{:action =>"chat",:method =>"post",:id => "form"}
                %input{:type => "hidden",:name => "chat_f",:id => "chat_f",:value => "123"}
                -#%button{:type => "submit"} submit
